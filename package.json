{
  "name": "pas-robotics-manage",
  "version": "1.0.0",
  "private": true,
  "description": "Gestion de mantenimiento preventivo y correctivo para robots industriales",
  "scripts": {
    "dev:server": "tsx watch src/index.ts",
    "dev:client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:client": "[ -f dist/client/index.html ] && echo '[PAS] Client already built by CI â€” skipping' || (npm install --prefix client && npm run build --prefix client)",
    "build:local": "npm run build:client && npx prisma generate",
    "build": "npx prisma generate && npx tsc",
    "start": "node dist/server/src/index.js",
    "db:migrate": "npx prisma migrate deploy",
    "db:seed": "npx prisma db seed",
    "postinstall": "./node_modules/.bin/prisma generate || echo '[PAS] prisma generate skipped (will use CI-built client)'"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@prisma/adapter-mariadb": "^6.7.0",
    "@prisma/client": "^6.4.1",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.4",
    "@types/passport": "^1.0.17",
    "@types/passport-microsoft": "^1.0.3",
    "@types/pdfmake": "^0.2.9",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-microsoft": "^2.0.0",
    "pdfmake": "^0.2.15",
    "prisma": "^6.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "dotenv": "^16.4.7",
    "zod": "^3.24.2"
  }
}
